{
  "name": "bjjeire.web.systemtests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "scripts": {
    "build": "tsc",
    "test": "playwright test",
    "test:chromium": "playwright test --retries 0 --project=chromium",
    "test:chromium-headed": "playwright test -j 1 --retries 0 --headed --project=chromium",
    "test:reg": "playwright test --project=chromium -g '@reg'",
    "test:smoke": "playwright test --project=chromium -g '@smoke'",
    "ui": "playwright test --ui-port 0",
    "trace": "playwright show-trace --port 0",
    "play-report": "playwright show-report playwright-report",
    "allure-report": "allure generate ./allure-results --clean",
    "open-report": "npm run allure-report && allure open ./allure-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "format": "prettier --write 'tests/**/*.ts' 'src/**/*.ts' 'playwright.config.ts' '**/*.json' '**/*.md' '!package-lock.json' '!dist/**/*' '!build/**/*'",
    "postinstall": "playwright install --with-deps chromium",
    "reinstall": "npx playwright install",
    "install-deps": "npx playwright install-deps"
  },
  "keywords": [
    "playwright",
    "playwright-test",
    "allure report",
    "web test automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "allure-commandline": "^2.34.0",
    "allure-playwright": "^3.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^2.0.0",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.0.0",
    "prettier": "^3.5.3",
    "tslib": "^2.8.1",
    "typescript": "^5.7.0"
  }
}
